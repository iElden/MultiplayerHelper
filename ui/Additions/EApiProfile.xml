<?xml version="1.0" encoding="utf-8"?>
<Context xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\..\..\..\CivTech\Libs\ForgeUI\ForgeUI_Assets\Controls.xsd"
         ColorSet="BodyTextCool" Style="FontNormal22" FontEffect="Stroke">

    <Include File="PopupDialog"/>
    <Include File="CivilizationIcon"/>
    <Box ID="MainGrid" Size="1024,parent" Anchor="C,T" Color="9,44,72,200" TutorialActive="1">
        <Image Texture="Controls_GradientSmall" Size="22,parent" AnchorSide="O,I" Anchor="R,T" Color="0,0,0,200" Rotate="270" Offset="0,0"/>
        <Image Texture="Controls_GradientSmall" Size="22,parent" AnchorSide="O,I" Anchor="L,T" Color="0,0,0,200" Rotate="90" Offset="0,0"/>
        <Box Color="32,70,101,150" Anchor="L,T" Size="2,parent"/>
        <Box Color="32,70,101,150" Anchor="R,T" Size="2,parent"/>

        <Container ID="MainWindow" Size="1024,768" Anchor="C,B">
            <!-- Logo -->
            <Grid ID="LogoContainer" Style="SubContainer4" Size="parent-10,116" Anchor="C,T" Color="7,28,50" AnchorSide="I,O" Offset="0,4">
                <Image ID="Logo" Anchor="C,C" Texture="MainLogo.dds" StretchMode="Auto"/>
            </Grid>

            <!-- Header -->
            <Container Size="parent,54">
                <Grid Anchor="C,T" Size="parent-10,39" Texture="Controls_DecoFrame" SliceCorner="19,18" SliceSize="1,1" SliceTextureSize="40,38" Color="41,74,108,255" Offset="0,6">
                    <GridButton ID="CloseButton" Style="ShellButtonOrnateFlat" Anchor="R,C" Size="150,36" Offset="1,0" String="LOC_MULTIPLAYER_BACK"/>
                </Grid>
                <Label Style="ShellHeader" Anchor="C,C" String="My Profile"/>
                <Grid Style="Divider3Grid" Size="parent+4, 8" Anchor="L,B" Offset="-2,0"/>
                <Grid Style="Divider3Grid" Size="parent+4, 8" Anchor="L,T" Offset="-2,0" Color="150,150,150,255"/>
            </Container>

            <!-- Top Menu -->
            <PullDown ID="RulesetPullDown" Anchor="R,T" Offset="5,68" Style="PullDownBlue" Size="700,24" ScrollThreshold="110" AutoSizePopUp="1" SpaceForScroll="0" Hidden="1"/>
            <Stack ID="TabStack" Anchor="L,T" Offset="15,60" Padding="5" StackGrowth="Right">
                <Container Size="auto,auto">
                    <GridButton ID="OverviewTab" Style="ShellTab" Size="300,41" String="LOC_GAMESUMMARY_OVERVIEW"/>
                    <GridButton ID="SelectedOverviewTab" Style="ShellTabSelected" Size="300,41" String="LOC_GAMESUMMARY_OVERVIEW" Hidden="1"/>
                </Container>
            </Stack>

            <!-- Tab Panels -->
            <Container Hidden="1" ID="OverviewTabPanel" Size="parent-30,parent-115" Anchor="L,T" Offset="15,105">
                <Grid Style="SubContainer" Size="parent,parent" Anchor="R,T" Offset="0,0">
                    <Grid Style="DecoGrid" Anchor="C,C" Size="parent-10,parent-10" Color="26,61,90,255">
                        <Image Anchor="C,C" Size="457,469" Texture="AdditionalContent_Watermark"/>
                        <Container ID="OverviewContainer" Size="parent,parent">
                            <!-- Main details panel -->
                            <ScrollPanel ID="OverviewScrollPanel" Anchor="L,T" Vertical="1" Offset="0,10" Size="parent-20,parent-30" AutoScrollBar="1">
                                <Stack Anchor="L,T" ID="OverviewStack" StackGrowth="Bottom" Padding="10" Size="parent,10">
                                    <Container Offset="20,10" Size="parent,150">
                                        <Stack Anchor="L,C" StackGrowth="Right" Padding="10">
                                            <Image ID="PlayerIcon" Size="128,128" Icon="ICON_LEADER_DEFAULT"/>
                                            <Stack Anchor="L,C" StackGrowth="Bottom" Padding="5">
                                                <Label ID="PlayerName" Anchor="L,T" TextOffset="500" ColorSet="BodyTextCool" FontSize="54" FontStyle="stroke" String="PLAYER_NAME"/>
                                                <Stack Anchor="L,T" StackGrowth="Right" Padding="5">
                                                    <Image ID="PlayerGuildIcon" Size="32,32" Icon="ICON_LEADER_DEFAULT"/>
                                                    <Label ID="PlayerGuildName" Anchor="L,C" TruncateWidth="170" TruncatedTooltip="1" Style="FontNormal14"
                                                           ColorSet="BodyTextCool" FontStyle="stroke" String="No guild"/>
                                                </Stack>
                                            </Stack>
                                        </Stack>
                                    </Container>
                                    <Stack Anchor="C,T" Offset="0,8" StackPadding="7">
                                        <Label Anchor="C,T" Style="FontNormal18" String="Current Ranking"/>
                                        <Box Color="10,60,78,255" Anchor="C,T" Size="Parent-120,3"/>
                                    </Stack>
                                    <Label ID="NoRankLabel" Anchor="L,T" Offset="20,10" Style="FontNormal18" String="Player didn't have any current Rank in any server" Hidden="1"/>
                                    <Stack ID="RankingStack" Anchor="L,C" StackGrowth="Right" Offset="20,10"/>
                                    <Stack Anchor="C,T" Offset="0,8" StackPadding="7">
                                        <Label Anchor="C,T" Style="FontNormal18" String="High Achievement"/>
                                        <Box Color="10,60,78,255" Anchor="C,T" Size="Parent-120,3"/>
                                    </Stack>
                                    <Label Anchor="L,T" Offset="20,10" Style="FontNormal18" String="In development ..."/>
                                    <Stack Anchor="C,T" Offset="0,8" StackPadding="7"> <!-- Start Header Tournament Result -->
                                        <Label Anchor="C,T" Style="FontNormal18" String="Tournament Result"/>
                                        <Box Color="10,60,78,255" Anchor="C,T" Size="Parent-120,3"/>
                                    </Stack> <!-- End Header Tournament Result -->
                                    <Label Anchor="L,T" Offset="20,10" Style="FontNormal18" String="In development ..."/>
                                    <Stack Offset="20,5" Padding="40" Hidden="1"> <!-- Tournament result Stack -->
                                        <Container Hidden="0" ID="CivFRRank" Size="330,auto" Anchor="L,T">
                                            <Stack Anchor="L,C" StackGrowth="Right" Padding="15">
                                                <Image ID="CompetitionIcon" Size="96,96" Icon="ICON_EAPI_CIVFR"/>
                                                <Stack Anchor="L,C" StackGrowth="Bottom">
                                                    <Label ID="PlayerLeaderName" Anchor="L,T" Style="FontFlair20" ColorSet="BodyTextCool" FontStyle="stroke"
                                                           String="CivFR - FFA - Saison 1"/>
                                                    <Label ID="PlayerLeaderName" Anchor="L,T" Style="FontNormal22" ColorSet="BodyTextCool" FontStyle="stroke" Offset="0,10"
                                                           String="#134 (top 36.2%)"/>
                                                    <Label ID="PlayerCivilizationName" Anchor="L,C" Style="FontNormal14" Offset="0,5"
                                                           ColorSet="BodyTextCool" FontStyle="stroke" String="1065 Points"/>
                                                    <Label ID="PlayerCivilizationName" Anchor="L,C" Style="FontNormal14"
                                                           ColorSet="BodyTextCool" FontStyle="stroke" String="1 Win - 1 Lose (50%) / 0 First"/>
                                                </Stack>
                                            </Stack>
                                        </Container>
                                        <Container Hidden="0" ID="CivFRRank" Size="330,auto" Anchor="L,T">
                                            <Stack Anchor="L,C" StackGrowth="Right" Padding="15">
                                                <Image ID="CompetitionIcon" Size="96,96" Icon="ICON_EAPI_CIVLAN"/>
                                                <Stack Anchor="L,C" StackGrowth="Bottom">
                                                    <Label ID="PlayerLeaderName" Anchor="L,T" Style="FontFlair20" ColorSet="BodyTextCool" FontStyle="stroke"
                                                           String="CivLAN 2022"/>
                                                    <Label ID="PlayerLeaderName" Anchor="L,T" Style="FontNormal22" ColorSet="BodyTextCool" FontStyle="stroke" Offset="0,10"
                                                           String="[COLOR_RED]Elimine first round"/>
                                                    <Label ID="PlayerCivilizationName" Anchor="L,C" Style="FontNormal14" Offset="0,5"
                                                           ColorSet="BodyTextCool" FontStyle="stroke" String="FUN (Coloo, Sausau, Aethelvard, iElden)"/>
                                                    <Label ID="PlayerCivilizationName" Anchor="L,C" Style="FontNormal14"
                                                           ColorSet="BodyTextCool" FontStyle="stroke" String="0 Win - 2 Lose"/>
                                                </Stack>
                                            </Stack>
                                        </Container>
                                        <Container Hidden="0" ID="CivFRRank" Size="330,auto" Anchor="L,T">
                                            <Stack Anchor="L,C" StackGrowth="Right" Padding="15">
                                                <Image ID="CompetitionIcon" Size="96,96" Icon="ICON_EAPI_CPL"/>
                                                <Stack Anchor="L,C" StackGrowth="Bottom">
                                                    <Label ID="PlayerLeaderName" Anchor="L,T" Style="FontFlair20" ColorSet="BodyTextCool" FontStyle="stroke"
                                                           String="CPL - FFA - Season 1"/>
                                                    <Label ID="PlayerLeaderName" Anchor="L,T" Style="FontNormal22" ColorSet="BodyTextCool" FontStyle="stroke" Offset="0,10"
                                                           String="1450 Points"/>
                                                    <Label ID="PlayerCivilizationName" Anchor="L,C" Style="FontNormal14" Offset="0,5"
                                                           ColorSet="BodyTextCool" FontStyle="stroke" String="6 Win - 2 Lose (75%) / 1 First"/>
                                                    <Label ID="PlayerCivilizationName" Anchor="L,C" Style="FontNormal14"
                                                           ColorSet="BodyTextCool" FontStyle="stroke" String="King"/>
                                                </Stack>
                                            </Stack>
                                        </Container>
                                    </Stack>
                                </Stack>

                                <!-- Scroll Controls -->
                                <ScrollBar Style="Slider_Blue" Length="530" Offset="3,0" Anchor="R,T" AnchorSide="O,I"/>

                            </ScrollPanel>
                        </Container>
                    </Grid>
                </Grid>
            </Container>
        </Container>

    </Box>

    <!-- Dialog Support -->
    <MakeInstance Name="PopupDialog"/>
    <LuaContext ID="GameDetails" DeferLoad="1" FileName="GameSummaries_GameDetails" Hidden="1"/>

    <Instance Name="RankingInstance">
        <Container ID="RankingContainer" Size="320,auto" Anchor="L,T">
            <Stack Anchor="L,C" StackGrowth="Right" Padding="5">
                <Image ID="RankingServerIcon" Size="96,96" Icon="ICON_EAPI_CIVFR"/>
                <Stack Anchor="L,C" StackGrowth="Bottom">
                    <Label ID="RankingLine1" Anchor="L,T" Style="FontFlair20" ColorSet="BodyTextCool" FontStyle="stroke"
                           String="CivFR - FFA"/>
                    <Label ID="RankingLine2" Anchor="L,T" Style="FontNormal18" ColorSet="BodyTextCool" FontStyle="stroke" Offset="0,10"
                           String="1224 Points"/>
                    <Label ID="RankingLine3" Anchor="L,C" Style="FontNormal14"
                           ColorSet="BodyTextCool" FontStyle="stroke" String="1 Win - 0 Lose (100%) / 0 First"/>
                    <Label ID="RankingLine4" Anchor="L,C" Style="FontNormal14"
                           ColorSet="BodyTextCool" FontStyle="stroke" String="#94 (Top 34.6%)"/>
                </Stack>
            </Stack>
        </Container>
    </Instance>
</Context>
